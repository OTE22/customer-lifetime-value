# =============================================================================
# CLV Prediction System - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
CLV_ENVIRONMENT=development  # development, staging, production
CLV_DEBUG=true
CLV_SECRET_KEY=change-this-to-a-secure-secret-key-in-production

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
CLV_API_HOST=0.0.0.0
CLV_API_PORT=8000
CLV_API_WORKERS=4
CLV_RATE_LIMIT=100  # requests per minute

# -----------------------------------------------------------------------------
# Database Configuration (optional)
# -----------------------------------------------------------------------------
CLV_DB_TYPE=sqlite
CLV_DB_HOST=localhost
CLV_DB_PORT=5432
CLV_DB_NAME=clv_predictions
CLV_DB_USER=
CLV_DB_PASSWORD=

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
CLV_CACHE_ENABLED=true
CLV_CACHE_TYPE=memory  # memory, redis
CLV_CACHE_HOST=localhost
CLV_CACHE_PORT=6379
CLV_CACHE_TTL=3600  # seconds

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
CLV_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
CLV_LOG_FILE=logs/clv_api.log

# -----------------------------------------------------------------------------
# Data Paths
# -----------------------------------------------------------------------------
CLV_DATA_DIR=data
CLV_DATA_FILE=customers.csv
CLV_MODEL_DIR=models

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# These are advanced settings, defaults work well for most cases
# CLV_RF_ESTIMATORS=100
# CLV_GB_ESTIMATORS=100
# CLV_GB_LEARNING_RATE=0.1
